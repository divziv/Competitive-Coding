Problem Link:
https://codeforces.com/problemset/problem/2051/A

Solution:
#include <bits/stdc++.h>
using namespace std;

int main() {
    int t;
    cin >> t;

    while(t--) {
        int n;
        cin >> n;

        vector<int> a(n), b(n);
        for(int i = 0; i < n; i++) 
        {
            cin >> a[i];
        }
        for(int i = 0; i < n; i++) 
        {
            cin >> b[i];
        }

        int s = a.back();

        for(int i = 0; i + 1 < n; i++) 
        {
            int d = a[i] - b[i + 1];
            if(d > 0) 
            {
                s += d;
            }
        }

        cout << s << "\n";
    }

    return 0;
}
