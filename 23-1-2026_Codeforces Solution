Problem Link:
http://codeforces.com/problemset/problem/567/A

Solution:
#include <bits/stdc++.h>
using namespace std;

int main() {
    int n;
    cin >> n;

    vector<long> x(n);
    for(int i = 0; i < n; i++) 
    {
        cin >> x[i];
    }

    cout << x[1] - x[0] << " " << x[n - 1] - x[0] << "\n";

    for(int i = 1; i < n - 1; i++) 
    {
        long mn = min(x[i] - x[i - 1], x[i + 1] - x[i]);
        long mx = max(x[n - 1] - x[i], x[i] - x[0]);
        cout << mn << " " << mx << "\n";
    }

    cout << x[n - 1] - x[n - 2] << " " << x[n - 1] - x[0] << "\n";

    return 0;
}
