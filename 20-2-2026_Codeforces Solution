Problem Link:
https://codeforces.com/problemset/problem/1917/B

Solution:
#include <bits/stdc++.h>
using namespace std;

int main() {
    int t;
    cin >> t;

    while(t--) {
        int n;
        cin >> n;

        string s;
        cin >> s;

        vector<bool> v(26, false);
        long long c = 0;
        int d = 0;

        for(int i = 0; i < n; i++) 
        {
            if(!v[s[i] - 'a']) 
            {
                v[s[i] - 'a'] = true;
                d++;
            }
            c += d;
        }

        cout << c << "\n";
    }

    return 0;
}
