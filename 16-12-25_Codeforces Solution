Problem Link:
https://codeforces.com/problemset/problem/1873/E

Solution:
#include <bits/stdc++.h>
using namespace std;

int main() {
    long t;
    cin >> t;
    
    while(t--) {
        long long n, x;
        cin >> n >> x;

        vector<long long> a(n);
        for(long long i = 0; i < n; i++) 
        {
            cin >> a[i];
        }

        long long l = 0, r = 2000000007LL, s = 0;

        while(l <= r) 
        {
            long long h = (l + r) / 2;
            long long v = 0;

            for(long long i = 0; i < n; i++) 
            {
                if(h > a[i]) 
                {
                    v += (h - a[i]);
                }
            }

            if(v <= x) 
            {
                s = h;
                l = h + 1;
            } 
            else 
            {
                r = h - 1;
            }
        }

        cout << s << "\n";
    }

    return 0;
}
