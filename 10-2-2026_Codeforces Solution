Problem Link:
https://codeforces.com/problemset/problem/1354/B

Solution:
#include <bits/stdc++.h>
using namespace std;

int mn(int x, int y) {
    return (x < y) ? x : y;
}

int main() {
    int t;
    cin >> t;
    
    while(t--) {
        string s;
        cin >> s;

        int last[4] = {-1, -1, -1, -1};
        int l = s.size() + 1;
        bool f = false;

        for(int i = 0; i < (int)s.size(); i++) 
        {
            last[s[i] - '0'] = i;

            int prev = mn(mn(last[1], last[2]), last[3]);
            if(prev < 0) 
                continue;

            f = true;
            int x = i - prev + 1;
            l = mn(l, x);
        }

        cout << (f ? l : 0) << "\n";
    }

    return 0;
}
