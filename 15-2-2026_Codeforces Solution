Problem Link:
https://codeforces.com/problemset/problem/1915/D

Solution:
#include <bits/stdc++.h>
using namespace std;

bool vowel(char x)
{
    return (x == 'a' || x == 'e');
}

int main() {
    int t;
    cin >> t;

    while(t--) {
        int n;
        cin >> n;

        string s;
        cin >> s;

        vector<int> v;

        for(int i = 0; i < s.size(); i++)
        {
            if(vowel(s[i]))
            {
                v.push_back(i);
            }
        }

        for(int i = 0; i < v.size(); i++)
        {
            int idx = v[i];

            cout << s[idx - 1] << s[idx];

            if(i + 1 < v.size() && v[i + 1] == idx + 3)
            {
                cout << s[idx + 1];
            }
            else if(idx + 2 == s.size())
            {
                cout << s[idx + 1];
            }

            if(i + 1 < v.size())
            {
                cout << ".";
            }
        }

        cout << "\n";
    }

    return 0;
}
