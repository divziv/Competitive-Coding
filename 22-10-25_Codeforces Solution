Problem Link:
https://codeforces.com/problemset/problem/1985/C

Solution:
#include <bits/stdc++.h>
using namespace std;

int main() {
    int t;
    cin >> t;
    
    while(t--) {
        int n;
        cin >> n;
        
        vector<long long> v(n);
        
        for(int i = 0; i < n; ++i)
            cin >> v[i];

        map<long long, int> f;
        long long p = 0;
        int c = 0;

        for(int i = 0; i < n; ++i) 
        {
            p += v[i];
            f[v[i]]++;
            if(p == 0 && i == 0) 
            {
                c++;
            } 
            else if(p % 2 == 0) 
            {
                long long s = p / 2;
                if(f.count(s))
                    c++;
            }
        }

        cout << c << "\n";
    }

    return 0;
}
