Problem Link:
https://codeforces.com/problemset/problem/1716/A

Solution:
#include <bits/stdc++.h>
using namespace std;

int main() {
    int t;
    cin >> t;
    
    while(t--) {
        long n;
        cin >> n;

        long s = 0;
        if(n == 1) 
        {
            s = 2;
        } 
        else if(n % 3 == 0) 
        {
            s = n / 3;
        } 
        else if(n % 3 == 1) 
        {
            s = 2 + ((n - 4) / 3);
        } 
        else 
        {
            s = 1 + (n / 3);
        }

        cout << s << "\n";
    }

    return 0;
}
