Problem Link:
https://codeforces.com/problemset/problem/2050/A

Solution:
#include <bits/stdc++.h>
using namespace std;

int main() {
    int t;
    cin >> t;
    
    while(t--) {
        int n, m;
        cin >> n >> m;
        
        vector<string> v(n);
        for (int i = 0; i < n; ++i)
            cin >> v[i];
        
        int s = 0, x = 0;
        for(int i = 0; i < n; ++i) 
        {
            if(s + (int)v[i].size() <= m) 
            {
                s += v[i].size();
                x++;
            } 
            else 
            {
                break;
            }
        }
        
        cout << x << "\n";
    }
    
    return 0;
}
