Problem Link:
https://codeforces.com/problemset/problem/1472/C

Solution:
#include <bits/stdc++.h>
using namespace std;

int main() {
    int t;
    cin >> t;
    
    while(t--) {
        int n;
        cin >> n;

        vector<long long> a(n);
        for(int i = 0; i < n; i++) 
        {
            cin >> a[i];
        }

        long long m = 0;
        for(int i = n - 1; i >= 0; i--) 
        {
            if(i + a[i] < n) 
            {
                a[i] += a[i + a[i]];
            }
            m = max(m, a[i]);
        }

        cout << m << "\n";
    }

    return 0;
}
