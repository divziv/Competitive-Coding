Problem Link:
https://codeforces.com/problemset/problem/1398/C

Solution:
#include <bits/stdc++.h>
using namespace std;

int main() {
    int t;
    cin >> t;
    
    while(t--) {
        int n;
        cin >> n;
        string s;
        cin >> s;

        map<int, int> m;
        m[0] = 1;

        int cs = 0;
        long long sum = 0;

        for(int i = 0; i < (int)s.size(); i++) 
        {
            cs += s[i] - '0';
            int c = cs - i - 1;
            sum += m[c];
            ++m[c];
        }

        cout << sum << "\n";
    }
    return 0;
}
