Problem Link:
https://codeforces.com/problemset/problem/1900/A

Solution:
#include <bits/stdc++.h>
using namespace std;

int main() {
    long t; 
    cin >> t;
    
    while(t--) {
        long n; 
        cin >> n;
        
        string s; 
        cin >> s;
        s.push_back('#');
        
        bool f = false; 
        long prev = -1, c = 0;
        for(long p = 0; p < s.size(); p++)
        {
            if(s[p] == '.')
            {
                ++c; 
                continue;
            }
            long d = p - prev - 1;
            if(d > 2)
            {
                f = true;
            }
            prev = p;
        }

        if(f)
        {
            c = 2;
        }
        cout << c << "\n";
    }
}
