Problem Link:
https://codeforces.com/problemset/problem/1607/B

Solution:
#include <bits/stdc++.h>
using namespace std;

int main() {
    int t;
    cin >> t;
    
    while(t--) {
        long long x, n;
        cin >> x >> n;
        long long m = n % 4;
        long long s;

        if(x % 2 == 0) 
        {
            if(m == 0)
                s = x;
            else if(m == 1)
                s = x - n;
            else if(m == 2)
                s = x + 1;
            else
                s = x + n + 1;
        } 
        else 
        {
            if(m == 0)
                s = x;
            else if(m == 1)
                s = x + n;
            else if(m == 2)
                s = x - 1;
            else
                s = x - n - 1;
        }

        cout << s << '\n';
    }

    return 0;
}
