Problem Link:
https://codeforces.com/problemset/problem/1914/C

Solution:
#include <bits/stdc++.h>
using namespace std;

int main() {
    int t;
    cin >> t;
    
    while(t--) {
        int n, k;
        cin >> n >> k;

        vector<int> a(n);
        for(int i = 0; i < n; i++) 
            cin >> a[i];

        vector<int> b(n);
        for(int i = 0; i < n; i++) 
            cin >> b[i];

        int s = 0, m = 0, r = 0;
        for(int i = 0; i < n && i < k; i++) 
        {
            s += a[i];
            m = max(m, b[i]);
            int p = s + (k - i - 1) * m;
            r = max(r, p);
        }

        cout << r << "\n";
    }

    return 0;
}
