Problem Link:
https://codeforces.com/problemset/problem/1726/A

Solution:
#include <bits/stdc++.h>
using namespace std;

int main() {
    int t;
    cin >> t;

    while(t--) {
        int n;
        cin >> n;

        vector<long long> a(n);
        for(int i = 0; i < n; i++) 
        {
            cin >> a[i];
        }

        long long m = LLONG_MIN;

        for(int i = 1; i < n; i++) 
        {
            m = max(m, a[i] - a[0]);
        }

        for(int i = 0; i < n - 1; i++) 
        {
            m = max(m, a[n - 1] - a[i]);
        }

        for(int i = 0; i < n; i++) 
        {
            m = max(m, a[(i - 1 + n) % n] - a[i]);
        }

        cout << m << "\n";
    }

    return 0;
}
