Problem Link:
https://codeforces.com/problemset/problem/1901/A

Solution:
#include <bits/stdc++.h>
using namespace std;

int main() {
    long t; 
    cin >> t;

    while(t--) {
        long n, x;
        cin >> n >> x;

        vector<long> v(n + 2, 0);
        for(long i = 1; i <= n; i++) 
            cin >> v[i];

        v[n + 1] = x + (x - v[n]);

        long s = 0;
        for(long i = 1; i <= n + 1; i++) 
        {
            long d = v[i] - v[i - 1];
            s = (s > d) ? s : d;
        }

        cout << s << "\n";
    }
}
