Problem Link:
https://codeforces.com/problemset/problem/2131/A

Solution:
#include <bits/stdc++.h>
using namespace std;

int main() {
    int t;
    cin >> t;
    
    while(t--) {
        int n;
        cin >> n;
        
        vector<int> a(n), b(n);
        for(int &x : a) 
            cin >> x;
        for(int &x : b) 
            cin >> x;

        int p = 0, n = 0;
        for(int i = 0; i < n; ++i) 
        {
            if(a[i] > b[i]) 
                p += a[i] - b[i];
            else 
                n += b[i] - a[i];
        }

        cout << max(p, n) + 1 << "\n";
    }
}
