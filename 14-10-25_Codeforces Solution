Problem Link:
https://codeforces.com/problemset/problem/1650/A

Solution:
#include <bits/stdc++.h>
using namespace std;

int main() {
    int t;
    cin >> t;
    
    while(t--) {
        string s;
        char c;
        cin >> s >> c;
        
        int n = s.size();
        bool f = false;
        
        for(int i = 0; i < n; ++i) 
        {
            if(s[i] == c) 
            {
                int l = i;
                int r = n - i - 1;
                if(min(l, r) % 2 == 0) 
                {
                    f = true;
                    break;
                }
            }
        }
        cout << (f ? "YES\n" : "NO\n");
    }
    return 0;
}
