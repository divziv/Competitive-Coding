Problem Link:
https://codeforces.com/problemset/problem/1931/B

Solution:
#include <bits/stdc++.h>
using namespace std;

int main() {
    int t;
    cin >> t;
    
    while(t--) {
        int n;
        cin >> n;

        vector<int> a(n);
        int s = 0;
        for(int i = 0; i < n; i++) 
        {
            cin >> a[i];
            s += a[i];
        }

        int m = s / n;
        bool f = true;
        int c = 0;

        for(int i = 0; f && i < n; i++) 
        {
            c += (a[i] - m);
            if(c < 0) 
                f = false;
        }

        cout << (f ? "YES\n" : "NO\n");
    }

    return 0;
}
