Problem Link:
https://codeforces.com/problemset/problem/1834/A

Solution:
#include <bits/stdc++.h>
using namespace std;

int main() {
    int t;
    cin >> t;
    
    while(t--) {
        int n;
        cin >> n;
        vector<int> a(n);
        
        int s = 0, c = 0;
        
        for(int i = 0; i < n; ++i) 
        {
            cin >> a[i];
            s += a[i];
            if(a[i] == -1) 
                c++;
        }
        
        int o = 0;
        while(s < 0) 
        {
            s += 2;
            o++;
            c--;
        }
        
        if(c % 2 != 0) 
            o++;
        cout << o << "\n";
    }
}
