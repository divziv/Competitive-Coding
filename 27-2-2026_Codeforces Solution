Problem Link:
https://codeforces.com/problemset/problem/1941/B

Solution:
#include <bits/stdc++.h>
using namespace std;

int main() {
    int t;
    cin >> t;

    while(t--) {
        int n;
        cin >> n;

        vector<long long> a(n);
        for(int i = 0; i < n; i++) 
        {
            cin >> a[i];
        }

        bool f = true;

        for(int i = 0; i + 2 < n; i++) 
        {
            if(a[i] < 0) 
            {
                f = false;
                break;
            }
            a[i + 1] -= 2LL * a[i];
            a[i + 2] -= a[i];
        }

        if(a[n - 2] != 0 || a[n - 1] != 0)
            f = false;

        cout << (f ? "YES" : "NO") << "\n";
    }

    return 0;
}
