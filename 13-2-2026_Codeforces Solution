Problem Link:
https://codeforces.com/problemset/problem/2197/B

Solution:
#include <bits/stdc++.h>
using namespace std;

int main()
{
    int t;
    cin >> t;

    while(t--) {
        int n;
        cin >> n;

        map<int, int> pos;
        for(int i = 0; i < n; ++i) 
        {
            int p;
            cin >> p;
            pos[p] = i;
        }

        vector<int> a(n);
        for(int i = 0; i < n; ++i)
            cin >> a[i];

        int l = -1;
        bool f = true;

        for(int i = 0; i < n; ++i) 
        {
            if(pos.find(a[i]) == pos.end() || pos[a[i]] < l) 
            {
                f = false;
                break;
            }
            l = pos[a[i]];
        }

        if(f)
            cout << "YES\n";
        else
            cout << "NO\n";
    }

    return 0;
}
