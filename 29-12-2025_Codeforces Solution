Problem Link:
https://codeforces.com/problemset/problem/2131/A

Solution:
#include <bits/stdc++.h>
using namespace std;

int main() {
    long t;
    cin >> t;
    
    while(t--) {
        long n;
        cin >> n;

        vector<long> a(n);
        for(long i = 0; i < n; i++) 
        {
            cin >> a[i];
        }

        long s = 1;
        for(long i = 0; i < n; i++) 
        {
            long b;
            cin >> b;
            if(a[i] > b) 
            {
                s += (a[i] - b);
            }
        }

        cout << s << "\n";
    }

    return 0;
}
