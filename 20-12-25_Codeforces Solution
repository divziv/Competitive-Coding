Problem Link:
https://codeforces.com/problemset/problem/1791/E

Solution:
#include <bits/stdc++.h>
using namespace std;

int main() {
    long t;
    cin >> t;
    
    while(t--) {
        long n;
        cin >> n;

        long long s = 0;
        long m = 1e9 + 7;
        bool c = false;

        for(long i = 0; i < n; i++) 
        {
            long x;
            cin >> x;

            if(x < 0) 
            {
                c = !c;
                x = -x;
            }
            s += x;
            m = min(m, x);
        }

        if(c) 
        {
            s -= 2LL * m;
        }

        cout << s << "\n";
    }

    return 0;
}
