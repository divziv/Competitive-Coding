Problem Link:
https://codeforces.com/problemset/problem/1360/C

Solution:
#include <bits/stdc++.h>
using namespace std;

int main() {
    int t;
    cin >> t;
    
    while(t--) {
        int n;
        cin >> n;

        vector<int> a(n);
        for(int i = 0; i < n; i++) 
        {
            cin >> a[i];
        }

        sort(a.begin(), a.end());

        bool o = true, x = false;
        for(int i = 0; i < n; i++) 
        {
            if(a[i] & 1) 
            {
                o = !o;
            }
            if(i > 0 && a[i] == a[i - 1] + 1) 
            {
                x = true;
            }
        }

        cout << ((o || x) ? "YES\n" : "NO\n");
    }

    return 0;
}
